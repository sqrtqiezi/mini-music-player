/**app.wxss**/

page {
    position: relative;
    height: 100%;
}

.background {
    width: 100%;
    height: 100%;
    position: absolute;
    filter: blur(50px);
    top: 0;
    left: 0;
    z-index: -1;
}

.container {
    height: 100%;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background: rgba(0, 0, 0, .5);
}