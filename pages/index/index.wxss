/**index.wxss**/

.container {
    padding-top: 200rpx;
    padding-bottom: 80rpx;
}

.cover {
    width: 380rpx;
    height: 380rpx;
    border-radius: 50%;
    border: 80rpx solid black;
    box-shadow: 0 0 0 15rpx #4F4C49;
}

.cover.placeholder {
    position: relative;
    background-color: #E43A45;
}

.cover.placeholder::after {
    content: "";
    display: inline-block;
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    top: 50%;
    left: 50%;
    background-color: black;
    border-radius: 50%;
    transform: translate(-50%, -50%);
}

.cover.animation {
    animation: spin 10s linear infinite;
}

@keyframes spin {
    100% {
        transform: rotate(360deg);
    }
}

.progress-panel {
    display: flex;
    font-size: .65em;
    color: #878481;
    align-items: center;
    margin-top: 100rpx;
}

.progress-panel text {
    width: 3em;
}

.progress-wrapper {
    position: relative;
    width: 520rpx;
    height:  6rpx;
    margin: 0 20rpx;
    background-color: #878481;
}

.progress-wrapper .progress {
    position: absolute;
    width: 100rpx;
    left: 0;
    top: 0;
    border-top: 6rpx solid #E43A43;
}

.progress-wrapper .vernier {
    position: absolute;
    left: 0;
    top: -20rpx;
    background-color: #E43A43;
    width: 10rpx;
    height: 10rpx;
    border: 20rpx solid white;
    border-radius: 50%;
}

.control-panel {
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

image.btn {
    display: inline-block;
}

.btn.btn-lg {
    width: 100rpx;
    height: 100rpx;
}

.btn.btn-md {
    width: 80rpx;
    height: 80rpx;
}

.btn.btn-sm {
    width: 60rpx;
    height: 60rpx;
}